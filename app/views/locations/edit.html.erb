<%= form_for [@company, @location] do |f| %>
  <div class="form-group">
    <%= f.text_field :street_address %>
    <div class="col-md-4">
      <%= f.label :street_address %>
    </div>
  </div>

  <div class="form-group">
    <%= f.text_field :street_address_2 %>
    <div class="col-md-4">
      <%= f.label :street_address_2 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.text_field :phone %>
    <div class="col-md-4">
      <%= f.label :phone %>
    </div>
  </div>

  <div class="form-group">
    <%= f.text_field :primary_contact %>
    <div class="col-md-4">
      <%= f.label :primary_contact %>
    </div>
  </div>

<!-- This needs to pull the NAME from the Cities Table but right now returns the object -->
  <div class="form-group">
    <%= fields_for :city do |city_field| %>
      <%= city_field.text_field :name %>
    <% end %>
    <div class="col-md-4">
      <%= f.label :city  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.collection_select :state, State.all, :id, :name %>
    <div class="col-md-4">
      <%= f.label :state %>
    </div>
  </div>
<!-- This needs to pull the ZIP from the Zip_codes Table but right now returns the object -->
  <div class="form-group">
    <%= fields_for :zip_code do |zip_field| %>
      <%= zip_field.text_field :zip_code %>
    <% end %>
    <div class="col-md-4">
      <%= f.label :zip_code %>
    </div>
  </div>

  <%= f.submit "Submit New Location For #{@company.name}"%>
<% end %>
