

<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <h2>Filters</h2>
                </li>
                <li>
                  <div class="form-group">
                    <%= form_tag("/companies", method: "get") do %>
                    <%= select_tag :size, options_for_select(company_size, params[:size]) %>
                    <div class="col-md-4">
                      <%= label_tag :size %>
                      <%= submit_tag ("Submit") %>
                      <% end %>
                    </div>
                  </div>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
              <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Filters</a>
                <div class="row">
                    <div class="col-lg-12">
                        <%= render partial: "shared/companies_index", locals: {companies: @companies} %>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    
    <!-- jQuery -->
   <script src="js/jquery.js"></script>

   <!-- Bootstrap Core JavaScript -->
   <script src="js/bootstrap.min.js"></script>

   <!-- Menu Toggle Script -->
   <script>
   $("#menu-toggle").click(function(e) {
       e.preventDefault();
       $("#wrapper").toggleClass("toggled");
   });
   </script>



